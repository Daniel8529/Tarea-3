<Window x:Class="Capitulo6.Capitulo_6.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo6.Capitulo_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="498">
    <Grid Margin="0,0,0,-6" >
        <Label Content="Calificacion" HorizontalAlignment="Left" Margin="42,55,0,0" VerticalAlignment="Top" Width="112" FontSize="20"/>
        <TextBox x:Name="calificacion" HorizontalAlignment="Left" Height="19" Margin="183,64,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="202" />
        <Button  x:Name="agregar" Content="Agregar" HorizontalAlignment="Left" Height="37" Margin="98,149,0,0" VerticalAlignment="Top" Width="97" Click="agregar_Click" FontSize="20"/>
        <Button  x:Name="Imprimir" Content="Imprimir" HorizontalAlignment="Left" Margin="263,147,0,0" VerticalAlignment="Top" Height="39" Width="109"  Click="Imprimir_Click" FontSize="20"/>
        <ListBox  x:Name="pantalla" HorizontalAlignment="Left" Height="190" Margin="42,213,0,0" VerticalAlignment="Top" Width="430" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    

    </Grid>

      
</Window>
